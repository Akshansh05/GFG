import java.util.*;
import java.lang.*;
import java.io.*;
class GFG
 {
	public static void main (String[] args)
	 {
	 //code
	 Scanner sc=new Scanner(System.in);
	 int t=sc.nextInt();
	 while(t-->0){
	 int num=sc.nextInt();
	 int l=sc.nextInt();
	 int r=sc.nextInt();
	 int bit=((1<<r)-1)^((1<<(l-1))-1);
	 System.out.println(num^bit);
	 }
}
}
