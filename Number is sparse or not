import java.util.*;
import java.lang.*;
import java.io.*;
class GFG
 {
	public static void main (String[] args)
	 {
	 //code
	 Scanner sc=new Scanner(System.in);
	 int t=sc.nextInt();
	 while(t-->0){
	 int n=sc.nextInt();
	 int flag=0;
	 while(n!=0){
	     int p=n>>1;
	     if(((n&1) !=0) && ((p&1) !=0)){
	         flag=1;
	         break;
	     }
	     n>>=1;
	 }
	 if(flag==1)
	 System.out.println("0");
	 else
	 System.out.println("1");
	 }
}
}
